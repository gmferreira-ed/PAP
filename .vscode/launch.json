{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Launch All",
      "configurations": ["Start Frontend", "Dev Backend"],
      "presentation": {
        "group": "",
        "order": 1
      }
    },
  ],
  "configurations": [
    {
      "name": "Start Frontend",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/PAP-FrontEnd",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start"],
      "console": "integratedTerminal",
      "presentation": {
        "order": 3
      }
    },
    
    {
      "name": "Dev Backend",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/PAP-BackEnd",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal",
      "presentation": {
        "order": 2
      }
    },

    {
      "name": "Simulate Docker",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      
      "cwd": "${workspaceFolder}/PAP-BackEnd/",
      "runtimeArgs": ["run", "start"],

      "preLaunchTask": "Build Backend",  // Add this line
      "console": "integratedTerminal",
      "presentation": {
        "order": 3
      }
    },
  ]
}
