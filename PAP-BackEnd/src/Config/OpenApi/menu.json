{
    "/menu": {
        "get": {
            "summary": "Get all menu items",
            "description": "Retrieves all items from the menu. Optionally filter by category.",
            "tags": [
                "Menu"
            ],
            "parameters": [
                {
                    "in": "query",
                    "name": "category",
                    "schema": {
                        "type": "string"
                    },
                    "required": false,
                    "description": "Filter menu items by category."
                }
            ],
            "responses": {
                "200": {
                    "description": "A list of menu items.",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "array",
                                "items": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "post": {
            "summary": "Create a new menu item",
            "description": "Inserts a new item into the menu table.",
            "tags": [
                "Menu"
            ],
            "requestBody": {
                "required": true,
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "product": {
                                    "type": "string",
                                    "example": "Cheeseburger"
                                },
                                "price": {
                                    "type": "number",
                                    "example": 9.99
                                },
                                "category": {
                                    "type": "string",
                                    "example": "Burgers"
                                },
                                "image_path": {
                                    "type": "string",
                                    "example": "/images/cheeseburger.png"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successfully added a menu item."
                    }
                }
            }
        },
        "delete": {
            "summary": "Delete a menu item",
            "description": "Deletes a menu item based on the product name.",
            "tags": [
                "Menu"
            ],
            "requestBody": {
                "required": true,
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "product": {
                                    "type": "string",
                                    "example": "Cheeseburger"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successfully deleted the menu item."
                    }
                }
            }
        }
    }
}