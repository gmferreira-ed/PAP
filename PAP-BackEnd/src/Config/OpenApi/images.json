{
    "/images/{image}": {
        "get": {
            "summary": "Get an image by filename/path",
            "description": "This endpoint allows you to upload a menu thumbnail image and retrieve its URL.",
            "tags": [
                "Images"
            ],
            "parameters": [
                {
                    "in": "path",
                    "name": "image",
                    "required": true,
                    "schema": {
                        "type": "string"
                    },
                    "description": "Filename or path of the image"
                }
            ],
            "responses": {
                "200": {
                    "description": "Image",
                    "content": {
                        "image/*": {}
                    }
                },
                "400": {
                    "description": "No file uploaded"
                }
            }
        }
    },
    "/images/menu-thumbnails": {
        "post": {
            "summary": "Upload a menu thumbnail image",
            "description": "This endpoint allows you to upload a menu thumbnail image and retrieve its URL.",
            "operationId": "uploadMenuThumbnail",
            "tags": [
                "Images"
            ],
            "requestBody": {
                "required": true,
                "content": {
                    "multipart/form-data": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "thumbnail": {
                                    "type": "string",
                                    "format": "binary"
                                }
                            }
                        }
                    }
                }
            },
            "responses": {
                "200": {
                    "description": "Image URL and filename",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "imageUrl": {
                                        "type": "string",
                                        "example": "/images/menu-thumbnails/thumbnail123.jpg"
                                    },
                                    "filename": {
                                        "type": "string",
                                        "example": "thumbnail123.jpg"
                                    }
                                }
                            }
                        }
                    }
                },
                "400": {
                    "description": "No file uploaded"
                }
            }
        }
    }
}